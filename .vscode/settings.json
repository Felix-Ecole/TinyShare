{
	// Type d'indentation par défaut.
	"editor.insertSpaces": false,

	// Fichier exclu de l'affichage.
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/__pycache__": true,
		"[!s]*/**": true,
		"s[!r]*/**": true,
		"sr[!c]*/**": true
	},

	"cSpell.language": "en, fr",
	"cSpell.caseSensitive": false,

	// Mots ajouter au dictionnaire.
	"cSpell.words": [
		"basedpyright",
		"dotmap",
		"sanic",
		"Sanic",
		"sqlite",
		"tinyshare",
		"venv",
		"virtualenvs"
	],

	// Paramètre du "BasedPyright" extensions (serveur de language python).
	"basedpyright.analysis.diagnosticSeverityOverrides": {
		"reportIncompatibleVariableOverride": "none",
		"reportSelfClsParameterName": "information",
		"reportImplicitOverride": "none",
		"reportAny": "none",

		"reportMissingParameterType": "information",
		"reportMissingTypeStubs": "none",

		"reportUnknownLambdaType": "none",
		"reportUnknownMemberType": "none",
		"reportUnknownVariableType": "none",
		"reportUnknownArgumentType": "none",
		"reportUnknownParameterType": "none",

		"reportUnusedImport": "information",
		"reportUnusedCallResult": "information",
	},
}